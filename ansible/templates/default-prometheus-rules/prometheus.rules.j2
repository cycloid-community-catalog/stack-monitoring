# Defines the set of alerts to check the status of prometheus
# Checks if:
# - Prometheus is down
# - Prometheus target down
# - There's an issue in the config reload
# - Prometheus rule evaluation failure

groups:
- name: prometheus-default.rules
  rules:
    {% set alert = 'PrometheusIsDown' %}
    {% set joined_config = prometheus_default_rules_global |
                           combine(prometheus_default_rules_predefined.get(alert, {})) |
                           combine(prometheus_default_rules_custom.get(alert, {})) %}
    {% if not joined_config['disable'] %}

    - alert: "Prometheus is down"
      expr: absent(up{job="prometheus", {{ joined_config['selector'] }} })
      for: "{{ joined_config['for'] }}"
      labels:
        organization: "{{ joined_config['organization'] }}"
        project: "{{ joined_config['project'] }}"
        env: "{{ joined_config['env'] }}"
        component: "{{ joined_config['component'] }}"
        severity: "{{ joined_config['severity'] }}"
        receiver: "{{ joined_config['receiver'] }}"
      annotations:
        summary: "Prometheus is down"
        description: "The Prometheus job has disappeared"
    {% endif %}

    {% set alert = 'PrometheusTargetDown' %}
    {% set joined_config = prometheus_default_rules_global |
                           combine(prometheus_default_rules_predefined.get(alert, {})) |
                           combine(prometheus_default_rules_custom.get(alert, {})) %}
    {% if not joined_config['disable'] %}

    - alert: "Prometheus Target Down"
      expr: absent(up{ {{ joined_config['selector'] }} })
      for: "{{ joined_config['for'] }}"
      labels:
        organization: "{{ joined_config['organization'] }}"
        project: "{{ joined_config['project'] }}"
        env: "{{ joined_config['env'] }}"
        component: "{{ joined_config['component'] }}"
        severity: "{{ joined_config['severity'] }}"
        receiver: "{{ joined_config['receiver'] }}"
      annotations:
        summary: "Prometheus target missing"
        description: "A Prometheus target has disappeared. An exporter might be crashed"
    {% endif %}